<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!--맵 위에있는 레이아웃-->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/top_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--오름차순 표로 가는 버튼-->
            <!--모든 놀이기구의 이름을 표시 하는 버튼-->
            <Button
                android:id="@+id/View_in_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예약 표"
                android:textStyle="bold"></Button>
            <Button
                android:id="@+id/View_in_name"
                android:text="놀이기구 이름보기"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>
            <Button
                android:id="@+id/show_QR"
                android:text="QR코드"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>
            <Button
                android:id="@+id/map_Button_Checkwating"
                android:text="현재 남은시간 확인"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>
        </LinearLayout>
    </HorizontalScrollView>


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--마지막에 추가된 자식이 가장 위에 표시-->
            <FrameLayout
                android:id="@+id/map_FrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--배경 화면이 되는 에버랜드 지도-->
                <ImageView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="734dp"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:src="@drawable/map"></ImageView>
                <!--호러메이즈 버튼-->
                <Button
                    android:id="@+id/Horror_Maze"
                    android:layout_marginLeft="232dp"
                    android:layout_marginTop="215dp"
                    android:layout_width="10dp"
                    android:layout_height="22dp"></Button>
                <!--호러메이즈 버튼의 이름 표-->
                <Button
                    android:id="@+id/Horror_Maze_sign"
                    android:layout_marginLeft="192dp"
                    android:layout_marginTop="195dp"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:background="#80A9A9A9"
                    android:text="호러메이즈"
                    android:textSize="9dp"
                    android:textStyle="bold"></Button>
                <!--T코스터 버튼-->
