                <!--범퍼카 댄싱 버튼-->
                <Button
                    android:id="@+id/bumper_car"
                    android:layout_marginLeft="604dp"
                    android:layout_marginTop="204dp"
                    android:layout_width="10dp"
                    android:layout_height="22dp"></Button>
                <!--범퍼카 버튼의 이름 표-->
                <Button
                    android:id="@+id/bumper_car_sign"
                    android:layout_marginLeft="564dp"
                    android:layout_marginTop="184dp"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:background="#80A9A9A9"
                    android:text="범퍼카"
                    android:textSize="9dp"
                    android:textStyle="bold"></Button>
                <!--매직스윙 댄싱 버튼-->
                <Button
                    android:id="@+id/Magic_swing_dancing"
                    android:layout_marginLeft="628dp"
                    android:layout_marginTop="148dp"
                    android:layout_width="10dp"
                    android:layout_height="22dp"></Button>
                <!--매직스윙 댄싱 버튼의 이름 표-->
                <Button
                    android:id="@+id/Magic_swing_dancing_sign"
                    android:layout_marginLeft="588dp"
                    android:layout_marginTop="128dp"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:background="#80A9A9A9"
                    android:text="매직스윙 댄싱"
                    android:textSize="9dp"
                    android:textStyle="bold"></Button>
                <!--매직쿠키 하우스 버튼-->
                <Button
                    android:id="@+id/Magic_Cookie_House"
                    android:layout_marginLeft="647dp"
                    android:layout_marginTop="159dp"
                    android:layout_width="10dp"
                    android:layout_height="22dp"></Button>
                <!--매직쿠키 하우스 버튼의 이름 표-->
