                <Button
                    android:id="@+id/shooting_ghost_sign"
                    android:layout_marginLeft="350dp"
                    android:layout_marginTop="269dp"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:background="#80A9A9A9"
                    android:text="슈팅 고스트"
