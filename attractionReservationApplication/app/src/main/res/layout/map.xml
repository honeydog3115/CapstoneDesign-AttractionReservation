                <!--스카이 댄싱 버튼-->
                <Button
                    android:id="@+id/sky_dancing"
                    android:layout_marginLeft="592dp"
                    android:layout_marginTop="167dp"
                    android:layout_width="10dp"
                    android:layout_height="22dp"></Button>
                <!--스카이 댄싱 버튼의 이름 표-->
                <Button
                    android:id="@+id/sky_dancing_sign"
                    android:layout_marginLeft="552dp"
                    android:layout_marginTop="147dp"
                    android:layout_width="80dp"
