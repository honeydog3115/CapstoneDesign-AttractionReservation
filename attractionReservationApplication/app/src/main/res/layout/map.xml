                    android:id="@+id/T_coaster_sign"
                    android:layout_marginLeft="255dp"
                    android:layout_marginTop="204dp"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:background="#80A9A9A9"
                    android:text="T코스터"
                    android:textSize="9dp"
                    android:textStyle="bold"></Button>
                <!--알파인 카니발 버튼-->
                <Button
                    android:id="@+id/alpine_carnival"
                    android:layout_marginLeft="256dp"
                    android:layout_marginTop="244dp"
                    android:layout_width="10dp"
                    android:layout_height="22dp"></Button>
                <!--알파인 버튼의 이름 표-->
                <Button
                    android:id="@+id/alpine_carnival_sign"
                    android:layout_marginLeft="216dp"
                    android:layout_marginTop="224dp"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:background="#80A9A9A9"
                    android:text="알파인카니발"
                    android:textSize="9dp"
                    android:textStyle="bold"></Button>
                <!--스페이스 투어 버튼-->
                <Button
                    android:id="@+id/space_tour"
                    android:layout_marginLeft="369dp"
                    android:layout_marginTop="323dp"
                    android:layout_width="10dp"
                    android:layout_height="22dp"></Button>
                <!--스페이스 버튼의 이름 표-->
                <Button
                    android:id="@+id/space_tour_sign"
                    android:layout_marginLeft="329dp"
                    android:layout_marginTop="303dp"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:background="#80A9A9A9"
                    android:text="스페이스 투어"
                    android:textSize="9dp"
                    android:textStyle="bold"></Button>
                <!--슈팅 고스트 버튼-->
                <Button
                    android:id="@+id/shooting_ghost"
                    android:layout_marginLeft="390dp"
